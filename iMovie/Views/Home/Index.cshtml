@model IEnumerable<iMovie.Models.MovieDetails>

@{
    ViewData["Title"] = "Index";
}
<body background="\uploads\cinema3.jpg">
    <h2>Repertuar</h2>


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Movie_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movie_Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateAndTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MoviePicture)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Movie_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Movie_Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateAndTime)
                    </td>
                    <td>
                        <img scr="@item.MoviePicture" width="100" height="100" asp-append-version="true" />
                    </td>
                    <td>
                        <a asp-action="BookNow" asp-route-id="@item.ID">Zamów bilet</a> |
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Admin"))
                            {

                                <a asp-action="DeleteMovie" asp-route-id="@item.ID" asp-controller="Admin">Usuń</a>
                            }

                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>