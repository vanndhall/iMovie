@model iMovie.Models.ViewModels.MovieDetailViewmodel

@{
    ViewData["Title"] = "Create";
}
<body background="\uploads\cinema3.jpg">
    <h2>Panel administratora</h2>

    <h4>Wprowadź dane aby dodać nowy film do repertuaru</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data" asp-controller="Admin">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Tytuł filmu:</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Opis:</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateofMovie" class="control-label">Data Premiery:</label>
                    <input asp-for="DateofMovie" class="form-control" />
                    <span asp-validation-for="DateofMovie" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MoviePicture" class="control-label">Plakat:</label>
                    <input type="file" name="files" multiple asp-for="MoviePicture" />
                    <span asp-validation-for="MoviePicture" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Powrót do listy</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>